<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h6><%= "Anzahl der Filme: " %><%= @total_films %></h6>
<div class="pagination pagination-mini">
  <%= will_paginate @films %>
</div>
<table class="table">
  <tr class="ueberschrift">
    <th>Titel</th>
    <th>Kategorie</th>
    <th>Länge</th>
    <th>Land</th>
    <th>Jahr</th>
    <th></th>
    <th></th>
    <th></th>



  </tr>
  <% @films.each do |film| %>
      <tr>
        <td><%= film.titel %></td>
        <td><%= film.category.name %></td>
        <td><%= film.laenge %></td>
        <td><%= film.land %></td>
        <td><%= film.jahr %></td>
        <td=class"list_actions">
        <td><%= link_to 'Anzeigen', film %></td>
        <td><%= link_to 'Ändern', edit_film_path(film) %></td>
        <td><%= link_to 'Löschen', film, confirm: 'Are you sure?', method: :delete %></td>
        </div>
      </tr>
  <% end %>
</table>
<div class="pagination pagination-mini">
  <%= will_paginate @films %>
</div>

