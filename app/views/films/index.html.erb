<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<table  id="films" class="display">
  <thead>
  <tr>
    <th>ID</th>
    <th>Titel</th>
    <th>Kategorie</th>
    <th>Länge</th>
    <th>Land</th>
    <th>Jahr</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @films.each do |film| %>
      <tr>
        <td><%= film.id %></td>
        <td><%= film.titel %></td>
        <td><%= film.category.name %></td>
        <td><%= film.laenge %></td>
        <td><%= film.land %></td>
        <td><%= film.jahr %></td>
        <td><%= link_to 'Anzeigen', film, :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Ändern', edit_film_path(film), :class=>'btn btn-mini' %></td>
        <td><%= link_to 'Löschen', film, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini' %></td>
      </tr>
  <% end %>
  </tbody>
</table>


