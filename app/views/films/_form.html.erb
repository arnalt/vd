<div class="form-horizontal">
  <%= render 'shared/error_messages' %>


  <div class="control-group">
    <label class="control-label"><%= f.label :titel   %></label>

    <div class="controls">
      <%= f.text_field :titel, :class=>"span8" %>
    </div>
  </div>


  <div class="control-group">
    <label class="control-label"><%= f.label :kategorie %></label>

    <div class="controls">
      <%= f.select :category_id, Category.all.map { |d| [d.name, d.id] }, prompt: "Bitte wÃ¤hlen Sie" %>
    </div>
  </div>


  <div class="control-group">
    <label class="control-label"><%= f.label :laenge %></label>

    <div class="controls">
      <%= f.number_field :laenge %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"> <%= f.label :land %></label>

    <div class="controls">
      <%= f.text_field :land %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"><%= f.label :jahr %></label>

    <div class="controls">
      <%= f.number_field :jahr %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"> <%= f.label :beschreibung %></label>

    <div class="controls">
      <%= f.text_area :description, :rows => 5, :class=>"span8" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label"> <%= f.label :image_url %></label>

    <div class="controls">
      <%= f.text_field :image_url %>>
    </div>
  </div>
</div>














