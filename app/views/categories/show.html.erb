<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<h3>Kategorie: <%= @cat_name %></h3>
<table class="table table-bordered">
  <tr>
    <th>Titel</th>
    <th>Länge</th>
    <th>Land</th>
    <th>Jahr</th>
    <th> </th>

  </tr>
  <% @films.each do |film| %>
      <tr>
        <td><%= film.titel %></td>
        <td><%= film.laenge %></td>
        <td><%= film.land %></td>
        <td><%= film.jahr %></td>
        <td><%= link_to 'Anzeigen', film, :class => 'btn btn-mini' %></td>
      </tr>
  <% end %>
</table>
<br><br><br><br><br><br><br>
<%= link_to 'Zurück', categories_path %>

