<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<h3>Kategorie: <%= @cat_name %></h3>
<table>
  <tr class="ueberschrift">
    <th>Titel</th>
    <th>Länge</th>
    <th>Darsteller</th>
    <th>Land</th>
    <th>Jahr</th>
  </tr>
  <% @films.each do |film| %>
      <tr>
        <td><%= film.titel %></td>
        <td><%= film.laenge %></td>
        <td><%= select_tag 'Darsteller', options_for_select(film.darstellers.map { |d| d.name  }), :class => 'select' %></td>
        <td><%= film.land %></td>
        <td><%= film.jahr %></td>
      </tr>
  <% end %>
</table>
<br><br><br><br><br><br><br>
<%= link_to 'Zurück', categories_path %>

